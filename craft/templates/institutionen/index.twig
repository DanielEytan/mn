{% extends "_layout" %}
{% set title = "News" %}
{% set mt = "mt" %}
	{% block content %}
		<section class="institutions institutions--overview">
			<div id="container">
			<header>
				<h1 class="narrow">INSTITUTIONEN</h1>
			</header>

			<div class="map-container">
				<googlemap name="googleMap"></googlemap>
			</div>
			<div class="flex-container">
			{% for entry in craft.entries.section('program').type('institution').find() %}
				<article class="institutions--overview_child">
					{# <a href="{{ siteUrl }}institutionen/{{ entry.slug }}"> #}
					<a href="{{ entry.url }}">
					{% for img in entry.programImg %}
						<figure>
							<img src="{{ img.getUrl }}" alt="{{ img.title }}">
						</figure>
					{% endfor %}
{# 					{% set color = entry.shuttleLine.color.find() %}
						{{ color }} #}

					{% for color in entry.shuttleLine %}<span class="shuttle-line" style="color: {{ color.color }}"><strong>{{ entry.number }}</strong> {{ color.title }} Shuttle Linie </span>{% endfor %}
					<h1>{{ entry.title }}</h1>
					<p>{{ entry.address }}<br>{{ entry.journey }}</p>
					</a>
				</article>
			{% endfor %}
			</div>
			</div>
		</section>
	{% endblock %}
