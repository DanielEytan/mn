{% extends "_layout" %}
{% set title = entry.title %}


	{% block content %}
		<div id="container">	
		<article class="institutions institutions--single narrow">
			<span>{{ entry.number }} – {% for color in entry.shuttleLine %}{{ color.title }}{% endfor %}</span>
			<h1>{{ entry.title }}</h1>

			<div>
				<div>
					{% if entry.advanceSale %}Ticketvorverkauf<br>{% endif %}
					    {{ entry.accessibility.label }}<br><br>
					    <p>{{ entry.address }}<br><br>

					    Anfahrt:<br>{{ entry.journey }}</p><br>
					
					
				</div>
			</div>
			

			
			{# {% endif %} #}
			
			<p>Essen: {{ entry.food }}</p><br>

			<h2>{{ entry.programmTitle }}</h2>
			{{ entry.programmText }}<br>
			<ul class="institutions--single__program-list">
				{% set children = entry.children().level(2) %}
				{% for entry in children %}
					<li>
						<h2>{{ entry.title }}</h2>
						{% for time in entry.time %}
							<time>
								{% if time.type == "setTimes" %}
									{{ time.start | date("h:i") }} (Dauer: {{ time.duration }})<br>
								{% elseif time.type == "continuous" %}
									{{ time.start | date("h:i") }} – {{ time.end | date("h:i") }} (Durchgehend)
								{% elseif time.type == "iterating" %}
									{{ time.start | date("h:i") }} – {{ time.end | date("h:i") }} ({{ time.frequency }}, Dauer: {{ time.duration }})
								{% endif %}
							</time>
						{% endfor %}
					</li><br>

				{% endfor %}

				
			</article>
		</div>
		{% endblock %}
