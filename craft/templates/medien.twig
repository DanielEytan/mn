		{# {% set docs = craft.entries.section('media').find() %} #}
			
		<section class="docs">
			<h2>Dokumente</h2>
				<ul>
			{% for block in entry.media %}
				{% if block.type == "docs" %}
					{% for doc in block.dokument %}
					<li><a href="{{ doc.getUrl}}" download><strong><i>⇓</i> {{ block.titel }}</strong></a> ({{ doc.size | filesize }})</li>
					{% endfor %}
				{% endif %}
			{% endfor %}
				</ul>
</section>
	<section class="images">
			<h2>Bilder</h2>
			<div class="flex-container">
				{% for block in entry.media %}
				{% if block.type == "img" %}
					<div class="image">
						{% for img in block.img %}
						<figure>
							<img src="{{img.getUrl}}" alt="{{img.title}}">
						</figure>
						<a href="{{ img.getUrl}}" download><strong><i>⇓</i> {{ block.titel }} </strong></a> ({{ img.size | filesize }})
						{% endfor %}
					</div>
				{% endif %}
				{% endfor %}
			</div>
	</section>
	<section class="images">
			<h2>Videos</h2>
			<div>
				<ul>
				{% for block in entry.media %}
				{% if block.type == "video" %}
					{# <strong><i>⇓</i> {{ block.title }}</strong> #}

					{% for video in block.video %}

					<li><a href="{{ video.getUrl}}"><strong><i>⇓</i> Trailer herunterladen</strong></a> </li>
					{% endfor %}
				{% endif %}
			{% endfor %}

			</ul>
			</div>
	</section>

	{% endblock %}
