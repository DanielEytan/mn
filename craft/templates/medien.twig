		<section class="docs">
			<h2>Dokumente</h2>
		
				<ul>

			{# {% for docs in entry.media.kind('pdf') %} #}
			{% for doc in entry.media %}
				{% if doc.type == "docs" %}
				
					<li><a href="{{ doc.getUrl}}" download><strong><i>⇓</i> {{ doc.title }}</strong></a> ({{ doc.kind }} – {{ doc.size | filesize }})</li>
				{% endif %}
			{% endfor %}
				</ul>
</section>
	<section class="images">
			<h2>Bilder</h2>
			<div class="flex-container">
				{% for img in entry.media %}
				{% if img.kind == "image" %}

				<div class="image">
					<figure>
						<img src="{{img.getUrl}}" alt="{{img.title}}">
					</figure>
					<a href="{{ img.getUrl}}" download><strong><i>⇓</i> {{ img.title }} </strong></a> ({{ img.kind }} – {{ img.size | filesize }})
				</div>
				{% endif %}
				{% endfor %}
			</div>
	</section>
