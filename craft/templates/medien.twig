		<section class="docs">
			<h2>Dokumente</h2>
		
				<ul>

			{% for docs in craft.assets.source('docs').kind('pdf') %}
					<li><a href="{{ docs.getUrl}}" download><strong><i>⇓</i> {{ docs.title }}</strong></a> ({{ docs.kind }} – {{ docs.size | filesize }})</li>
			
			{% endfor %}
				</ul>
</section>
	<section class="images">
			<h2>Bilder</h2>
			<div class="flex-container">
				{% for docs in craft.assets.source('docs').kind('image') %}
				<div class="image">
					<figure>
						<img src="{{docs.getUrl}}" alt="{{docs.title}}">
					</figure>
					<a href="{{ docs.getUrl}}" download><strong><i>⇓</i> {{ docs.title }} </strong></a> ({{ docs.kind }} – {{ docs.size | filesize }})
				</div>
				{% endfor %}
			</div>
	</section>
	{% endblock %}
