{% extends "_layout" %}
{% set title = "Journal" %}
{% set mt = "mt" %}


{% block content %}

<div class="journal journal--overview">
	<div class="group">
		{% for entry in craft.entries.section('journal').type('journal') %}
		<div class="post">
			<a href="{{ entry.url }}">
				{% for img in entry.cover %}
				<figure {% if img.height > img.width %}class="portrait"{% endif %}>
					<img src="{{ img.url }}" alt="{{ img.title }}">
				</figure>
				{% endfor %}
				<p class="post-date">Ver√∂ffentlicht am {{ entry.postDate | date("d. F Y") }}</p>
				<h1><span>{{ entry.title }}</span></h1>
				{{ entry.excerpt }}
				<span class="more">Mehr</span>
			</a>
		</div>
		{% endfor %}
	</div>
</div>

{% endblock %}